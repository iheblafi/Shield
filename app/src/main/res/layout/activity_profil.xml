<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blueokhwani"
    tools:context=".profil.Profil">

    <TextView
        android:id="@+id/secondFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child first name"
        android:layout_gravity="center"
        android:textColor="#43a047"
        android:textSize="20sp"
        android:textStyle="italic|bold"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewl3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/child1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:text="First Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/titleTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:text="First Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView
                    android:id="@+id/titleTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="First Name"
                    android:textColor="#545454"
                    android:textSize="12sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                app:backgroundTint="@color/blueokhwani"
                android:id="@+id/viewButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Month"
                android:textAllCaps="false"
                android:textColor="#B5B0B0"
                android:textSize="14sp" />

            <Button
                app:backgroundTint="@color/blueokhwani"
                android:id="@+id/viewButton2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Week"
                android:textAllCaps="false"
                android:textColor="#B5B0B0"
                android:textSize="14sp" />
            <Button app:backgroundTint="#FFFFFF"
                android:id="@+id/viewButton3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Day"
                android:textAllCaps="false"
                android:textColor="@color/blueokhwani"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:text="Danger Level"
                        android:textColor="#545454"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="High"
                        android:textColor="#FA0000"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView  >
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:text="Last night Sleep duration"
                        android:textColor="#545454"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="8h"
                        android:textColor="#545454"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView  >
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:text="Device usage"
                            android:textColor="#545454"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="4h"
                            android:textColor="#545454"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView  >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:text="Phone call duration"
                            android:textColor="#545454"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="4h"
                            android:textColor="#545454"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView  >
            </LinearLayout>









                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="-10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">
                            <TextView
                                android:id="@+id/usernameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Last Alerts"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="#545454"
                                android:textStyle="bold"
                                android:textSize="14sp" />




                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp"
                            android:gravity="left">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"

                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp"
                            android:gravity="left">
                            <TextView
                                android:id="@+id/applyAtTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 days 19 hours 18 minutes ago ago"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="8dp"
                                android:textColor="#FA0000"
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:34 PM"
                                android:textColor="#545454"
                                android:textSize="10sp" />
                        </LinearLayout>
                            <TextView
                                android:id="@+id/applyAtText25View"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 days 19 hours 18 minutes ago ago grg regerger gergerg greger"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="8dp"
                                android:textColor="#545454"
                                android:textSize="12sp"/>
                        </LinearLayout>






                    </ScrollView>







                    </LinearLayout>






                </androidx.cardview.widget.CardView>






        </LinearLayout>
